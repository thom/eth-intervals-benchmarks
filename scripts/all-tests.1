#!/bin/bash

MYDIR=$(dirname $0)
DIR=$(cd $MYDIR; pwd)
JGF=$(cd $MYDIR/..; pwd)

if [ -z "$JAVA_OPTS" ]
then
	JAVA_OPTS="-Xmx2048M"
fi

$DIR/benchmark-init $1

tests=(
	TestBarrier
	TestBBPCArray
	TestBBPCArrayWithDynamicGuards
	TestBBPCLinks
	TestDynamicGuard
	TestErco
	TestErrorPropagation
	TestFJ
	TestFuzzyBarrier
	TestGameOfLife
	TestGCable
	TestHB
	TestHOH
	TestIllegalEdges
	TestInterval
	TestJGFMT
	TestLocks
	TestP2P
	TestPatternLock
	TestPCLinks
	TestPCLoop
	TestStrassenMMult
)

for test in ${tests[@]}; do
	echo "Running ${test}"
	echo
	java ${JAVA_OPTS} org.junit.runner.JUnitCore ch.ethz.intervals.${test} 2>/dev/null
	echo
done
